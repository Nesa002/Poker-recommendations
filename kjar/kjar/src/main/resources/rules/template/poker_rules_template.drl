template header
ruleName
stakeLevel
salience
raiseThreshold
positionThreshold
handCategory
requiresStrongEconomy
requiresAggressiveTable
action

template "poker-rules"

rule "@{ruleName}"
activation-group "@{stakeLevel}"
salience @{salience}
when
    $r: Round()
    eval($r.getCurrentRaise() @{raiseThreshold} (min_bigger_raise * $r.getPot()) && $r.getCurrentRaise() >= min_bigger_raise_blinds)
    @{(positionThreshold != null && !positionThreshold.isEmpty()) ? "eval($r.getPlayerPosition() > " + positionThreshold + ")" : ""}
    @{(handCategory != null && !handCategory.isEmpty()) ? "eval(handEvalService.isHandAtLeast($r.getHand(), \"" + handCategory + "\"))" : ""}
    @{(requiresStrongEconomy != null && requiresStrongEconomy.equals("true")) ? "eval($r.getStrongEconomy())" : ""}
    @{(requiresAggressiveTable != null && requiresAggressiveTable.equals("true")) ? "eval(handService.isTableAggressive())" : ""}
then
    System.out.println("Action: @{action}");
end

end template